{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "isolatedModules": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./packages/backend/dist",
    "rootDir": "./packages/backend",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2022"
  }
}
